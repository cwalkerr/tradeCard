<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Document</title>
  <link rel="stylesheet" href="/css/custom.css" />
</head>

<body>
  <style>
    .card-body {
      position: absolute;
      bottom: 0;
      left: 0;
      right: 0;
      background: rgba(88, 1, 114, 0.534);
      color: white;
      opacity: 0;
      transition: opacity 0.5s ease;
    }

    .card:hover .card-body {
      opacity: 1;
    }

    .card {
      transition: transform 0.3s ease;
    }

    .card:hover {
      transform: scale(1.1);
    }
  </style>
  <%- include('components/navbar.ejs') %>
  <div class="container">
    <% if (route.startsWith ('/collections/')) { %>
    <div class="row justify-content-center gap-2 mt-5">
      <div class="col">
        <h4>Collection</h4>
      </div>
    </div>
    <% } else if (route.startsWith('/wishlist')) {  %>
    <div class="row justify-content-center gap-2 mt-5">
      <div class="col">
        <h4>Wishlist</h4>
      </div>
    </div>
    <% } %>
    <div class="row justify-content-center gap-2 mt-5">
      <% cards.forEach(function(card) { %>
      <div class="col-xxl-2 col-lg-3 col-5">
        <a href="/cards/<%= card.card_id%>">
          <div class="card shadow my-2 position-relative">
            <!-- REMOVE CARD FROM COLLECTION BUTTON -->
            <% if (route.startsWith ('/collections/') && userId === collectionOwner) { %>
            <form action="/collections/<%=collectionId%>/cards/<%=card.card_id%>/?_method=DELETE" method="POST">
              <button class="btn btn-danger position-absolute top-0 start-100 translate-middle  p-2 border border-light rounded-circle">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                  <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                </svg>
              </button>
            </form>
            <% } %>

            <!-- REMOVE CARD FROM WISHLIST BUTTON -->
            <% if (route.startsWith ('/wishlist') && userId === wishlistOwner) { %>
            <form action="/wishlist/<%=wishlistId%>/cards/<%=card.card_id%>/?_method=DELETE" method="POST">
              <button class="btn btn-danger position-absolute top-0 start-100 translate-middle  p-2 border border-light rounded-circle">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" fill="currentColor" class="bi bi-x-lg" viewBox="0 0 16 16">
                  <path d="M2.146 2.854a.5.5 0 1 1 .708-.708L8 7.293l5.146-5.147a.5.5 0 0 1 .708.708L8.707 8l5.147 5.146a.5.5 0 0 1-.708.708L8 8.707l-5.146 5.147a.5.5 0 0 1-.708-.708L7.293 8z" />
                </svg>
              </button>
            </form>
            <% } %>

            <img src="<%= card.image %>" class="card-img-top img-fluid" alt="..." />
            <div class="card-body">
              <h6 class="card-title lead fw-semibold font-monospace">
                <%= card.name %>
              </h6>
            </div>
          </div>
        </a>
      </div>
      <% }) %>
    </div>
  </div>

  <div class="container">
    <% if (totalPages > 1) { %>
    <nav aria-label="Page navigation">
      <ul class="pagination d-flex justify-content-center my-4">
        <% if (currentPage > 1) { %>
        <li class="page-item">
          <a class="page-link" href="
            ?page=<%= currentPage -1 %>">Previous</a>
        </li>
        <% } %> <% for (let i = startPage; i <= endPage; i++) { %>
        <li class="page-item <%= currentPage === i ? 'active' : '' %>">
          <a class="page-link" href="
            ?page=<%= i %>"><%= i %></a>
        </li>
        <% } %> <% if (currentPage < totalPages) { %>
        <li class="page-item">
          <a class="page-link" href="?page=<%= currentPage +1 %>">Next</a>
        </li>
        <% } %>
      </ul>
    </nav>
    <% } %>
  </div>
  <script src="/bootstrap/js/bootstrap.bundle.min.js"></script>
</body>

</html>